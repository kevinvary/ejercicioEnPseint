	definir num1 Como Real;
	Escribir  "Digite un numero: ";
	leer num1;
	Si num1>0 Entonces
		Escribir "El numero: ", num1," es mayor que 0";
	SiNo
		Si  num1=0 Entonces
			Escribir "Su numero es igual a 0";
		SiNo
			Escribir "Su numero es menor a 0";
		FinSi
	FinSi
	
	
	
	
	
	
	
	
