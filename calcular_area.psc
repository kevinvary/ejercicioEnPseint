Algoritmo calcular_area
	
	
	Definir base, altura, area, perimetro Como Real;
	
	Escribir "Ingrese la Base: ";
	Leer base;
	Escribir "Ingrese altura: ";
	Leer altura;
	
	area=(base*altura)/2;
	Escribir "El perimetro es de: ", area, " centimetros cuadrados";
	perimetro=base+altura+area;
	Escribir "El perimetro es de: ", perimetro; " cm";
	
FinAlgoritmo
